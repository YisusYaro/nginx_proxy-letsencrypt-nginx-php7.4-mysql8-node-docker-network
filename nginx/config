version: '3'

networks:
  nginx-php74:

services:

  nginx-proxy:
    image: jwilder/nginx-proxy
    ports:
      - '80:80'
    volumes:
      - '/var/run/docker.sock:/tmp/docker.sock'
  
  nginx-service:
    image: nginx
    container_name: nginx-container
    expose:
      - '80'
    volumes:
      - './www:/var/www/project'
      - './nginx/default.conf:/etc/nginx/conf.d/default.conf'
    environment:
      - 'VIRTUAL_HOST=localhost'
    depends_on:
      - nginx-proxy
      - php74-service
    networks:
      - nginx-php74

  php74-service:
    build:
        context: .
        dockerfile: ./php/Dockerfile
    container_name: php74-container
    expose:
        - '9000'
    volumes:
        - './www:/var/www/project'
    networks:
      - nginx-php74

      

volumes:
  certs: null
  html: null
  vhostd: null
